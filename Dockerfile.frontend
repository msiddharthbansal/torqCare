# ---------- Build stage ----------
    FROM node:18-alpine AS builder

    WORKDIR /app/frontend
    
    COPY frontend/package*.json ./
    RUN npm install
    
    COPY frontend/ .
    RUN npm run build
    
    # ---------- Serve stage ----------
    FROM nginx:alpine
    
    COPY --from=builder /app/frontend/dist /usr/share/nginx/html
    
    EXPOSE 80
    CMD ["nginx", "-g", "daemon off;"]
    